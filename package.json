{
  "name": "tweet-map",
  "version": "0.1.0",
  "dependencies": {
    "@material-ui/core": "4.11.0",
    "@material-ui/icons": "4.9.1",
    "abortcontroller-polyfill": "1.5.0",
    "i18next": "19.8.3",
    "jest-canvas-mock": "2.3.0",
    "mapbox-gl": "1.12.0",
    "mobility-toolbox-js": "1.1.11",
    "node-sass": "4.13.1",
    "ol": "6.4.3",
    "prop-types": "15.7.2",
    "query-string": "^6.13.6",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-i18next": "11.7.3",
    "react-icons": "3.11.0",
    "react-redux": "7.2.2",
    "react-spatial": "1.0.9",
    "redux": "4.0.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.5",
    "@testing-library/react": "10.4.9",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-cypress": "2.11.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "fixpack": "3.0.6",
    "husky": "4.3.0",
    "jest-serializer-html": "7.0.0",
    "lint-staged": "10.5.1",
    "prettier": "2.1.2",
    "react-scripts": "3.4.4",
    "redux-mock-store": "1.5.4",
    "redux-thunk": "2.3.0",
    "stylelint": "13.7.2",
    "stylelint-config-recommended-scss": "4.2.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-scss": "3.18.0"
  },
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "format": "prettier --write 'src/**/*.js' && eslint 'src/**/*.js' --fix && stylelint 'src/**/*.css' 'src/**/*.scss' --fix",
    "lint": "eslint 'src/**/*.js' && stylelint 'src/**/*.css' 'src/**/*.scss'",
    "start": "react-scripts start",
    "test": "react-scripts test --env=jsdom --transformIgnorePatterns \"/node_modules/(?!(@geops/react-ui|jsts|ol|ole|react-spatial|mobility-toolbox-js)/).*/\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "cypress/globals": true,
      "node": true,
      "browser": true,
      "es6": true,
      "jest": true
    },
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "cypress",
      "prettier"
    ],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "husky": {
    "hooks": {
      "post-checkout": "yarn install --frozen-lockfile",
      "post-merge": "yarn install --frozen-lockfile",
      "post-rebase": "yarn install --frozen-lockfile",
      "pre-commit": "CI=true lint-staged   "
    }
  },
  "jest": {
    "coverageReporters": [
      "text",
      "html"
    ],
    "snapshotSerializers": [
      "jest-serializer-html"
    ]
  },
  "lint-staged": {
    "(src|__mocks__)/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add",
      "yarn test --bail --findRelatedTests"
    ],
    "package.json": [
      "fixpack --sortToTop name --sortToTop description --sortToTop version --sortToTop author --sortToTop main --sortToTop proxy --sortToTop dependencies --sortToTop peerDependencies --sortToTop devDependencies --sortToTop resolutions --sortToTop scripts",
      "git add"
    ],
    "src/**/*.{css,scss}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "stylelint": {
    "plugins": [
      "stylelint-scss"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recommended-scss"
    ]
  }
}
